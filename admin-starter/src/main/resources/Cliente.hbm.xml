<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="entidades.Cliente" table="cliente">

        <id name="OID" type="string">
            <column name="OIDCliente"/>
            <generator class="uuid2"/>
        </id>

        <property name="dniCliente" type="int">
            <column name="dni_cliente"/>
        </property>

        <property name="nombreCliente" type="string">
            <column name="nombre_cliente"/>
        </property>

        <property name="apellidoCliente" type="string">
            <column name="apellido_cliente"/>
        </property>

        <property name="mailCliente" type="string">
            <column name="mail_cliente"/>
        </property>

        <property name="fechaHoraBajaCliente" column="fecha_hora_baja_cliente" type="timestamp"/>

    </class>

</hibernate-mapping>