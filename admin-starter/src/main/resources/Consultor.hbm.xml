<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="entidades.Consultor" table="consultor">

        <id name="OID" type="string">
            <column name="OIDConsultor"/>
            <generator class="uuid2"/>
        </id>

        <property name="legajoConsultor" type="int">
            <column name="legajo_consultor"/>
        </property>

        <property name="nombreConsultor" type="string">
            <column name="nombre_consultor"/>
        </property>

        <property name="nroMaximoTramites" type="int">
            <column name="nro_maximo_tramites"/>
        </property>

        <property name="fechaHoraBajaConsultor" column="fecha_hora_baja_consultor" type="timestamp"/>

        <bag name="agendas" table="consultor_agenda_consultor" inverse="true" cascade="save-update">
            <key column="OIDConsultor" not-null="true"/>
            <many-to-many class="entidades.AgendaConsultor" column="OIDAgendaConsultor"/>
        </bag>


    </class>

</hibernate-mapping>
